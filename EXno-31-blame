% Program to generate basic HTML with Anchor and Title tags
generate_html :-
    write('192311288-Gshareef'), nl,
    open('blog_post.html', write, Stream),
    write(Stream, '<!DOCTYPE html>\n'),
    write(Stream, '<html>\n'),
    write(Stream, '<head>\n'),
    write(Stream, '<title>My Prolog-Generated Blog</title>\n'),
    write(Stream, '</head>\n'),
    write(Stream, '<body>\n'),
    write(Stream, '<h1>Welcome to My Blog</h1>\n'),
    write(Stream, '<p>This content was generated using a Prolog program.</p>\n'),
    write(Stream, '<a href="https://example.com" title="Visit Example">Click here to visit Example</a>\n'),
    write(Stream, '<p>Author: 192311338-B.Harishwar Reddy</p>\n'),
    write(Stream, '</body>\n'),
    write(Stream, '</html>'),
    close(Stream).
